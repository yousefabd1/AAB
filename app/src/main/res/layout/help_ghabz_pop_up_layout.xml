<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/popup_3"
    android:gravity="right"
    android:background="#E0000000"
    android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="7"
            android:shadowRadius="2"
            android:textColor="@color/White"
            android:text="1. شناسه قبض و شناسه پرداخت قبض خود را وارد نمایید."
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="7"
        android:shadowRadius="2"
        android:textColor="@color/White"
        android:text="در صورتی که بارکد قبض در اختیار شما می باشد، می توانید به جای ورود دستی، از بارکد خوان استفاده نمایید. با لمس دکمه بارکد خوان و اسکن بارکد موجود در قبض، شناسه پرداخت و شناسه قبض به صورت خودکار پر خواهند شد"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="7"
        android:shadowRadius="2"
        android:textColor="@color/White"
        android:text="2. دکمه مرحله بعد را لمس نمایید."
        />

    <Button
        android:id="@+id/close_popup"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/White"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:text="بستن"/>


  </LinearLayout>